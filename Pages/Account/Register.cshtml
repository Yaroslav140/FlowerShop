@page
@model FlowerShop.Web.Pages.Account.RegisterModel
<div class="auth-center">
    <div class="form-card">
        <h2>Создание аккаунта</h2>
        <p class="subtitle">Присоединяйтесь к Нам, чтобы начать заказывать красивые цветы</p>
        @if (TempData["ErrorMessage"] is string err)
        {
            <div class="alert error">@err</div>
        }
        <form method="post">
            <div class="form-group">
                <label for="username">Имя пользователя</label>
                <input asp-for="UserName" id="username" type="text">
            </div>

            <div class="form-group">
                <label for="email">Логин</label>
                <input asp-for="Login" id="login" type="login">
            </div>

            <div class="form-group">
                <label for="password">Пароль</label>
                <input asp-for="Password" id="password" type="password">
            </div>

            <div class="form-group">
                <label for="confirm">Повторите пароль</label>
                <input asp-for="ConfirmPassword" id="confirm" type="password">
            </div>

            <button type="submit">Зарегистрироваться</button>
        </form>

        <div class="signin">
            У вас уже есть учетная запись? <a href="/Account/Login">Sign In</a>
        </div>
    </div>
</div>
