@page
@model FlowerShop.Web.Pages.Account.PlaceOrderModel
@if (TempData["ErrorMessage"] is string err)
{
    <div class="alert error">@err</div>
}
<div class="order-center">
    <div class="order-card">
        <h2>Оформить заказ</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Phone">Номер телефона</label>
                <input asp-for="Phone" class="form-control" placeholder="+7 (___) ___-__-__" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveryDate">Дата доставки</label>
                <input asp-for="DeliveryDate" type="date" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>

            <button asp-page-handler="SubmitOrder" type="submit" class="btn btn--brand">Отправить</button>
        </form>
    </div>
</div>